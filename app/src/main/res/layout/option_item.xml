<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/option_relative_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/option_item_checkbox"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="" />

    <TextView
        android:id="@+id/option_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/option_item_price"
        android:layout_toRightOf="@id/option_item_checkbox"
        android:text="Opcja"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/option_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Cena:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/option_item_description"
        android:layout_marginStart="32dp"
        android:layout_below="@id/option_relative_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis test..."
        android:textColor="@color/black"
        android:textSize="12sp" />
</RelativeLayout>