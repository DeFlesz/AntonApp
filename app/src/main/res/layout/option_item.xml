<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/option_checkbox_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <CheckBox
            android:id="@+id/option_item_checkbox"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:id="@+id/option_item_title"
            android:layout_toRightOf="@id/option_item_checkbox"
            android:layout_toLeftOf="@id/option_item_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcja"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/option_item_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cena:"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/option_item_description"
        android:padding="8dp"
        android:layout_marginHorizontal="4dp"
        android:layout_below="@id/option_checkbox_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis"
        android:textSize="12sp"
        android:textColor="@color/black"
        />


</RelativeLayout>